<% provide(:title, @user.name,) %>

	<div class="row-fluid">
	  <aside class="span3">
	  	<section>
				<%= gravatar_for @user %>
				<h1><%= @user.name %></h1>
				<p><%= @user.email %></p>
				<p><%= @user.phone %></p>
			</section>				
	  </aside>

	  <main class="span9">	  	
	  	<section>
		  	<%= render 'teams/team' %>
	  	</section>
	  </main>
	</div>


  <div class="row-fluid">
	  <aside class="span3">
	  	<section>
		  	<%= render 'layouts/pick' %>
		  </section>
	  </aside>

	  <main class="span9">
	  	<section>
	  		<!-- <object> <embed src=http://sports.yahoo.com/nfl/odds width="100%" height="336"> </embed></object> -->
	  		<%= render 'layouts/ticker' %>
	  	</section>
	  </main>
	</div>

	<div class="row-fluid">
	  <aside class="span12">
	  	<section>
		  	<%= render 'layouts/results' %>
		  </section>
	  </aside>
	</div>

	<div class="row-fluid">
	  <aside class="span3">
	  	<section>
		  	<%= render 'layouts/trade' %>
		  </section>
	  </aside>
	  <trade class="span9">
	  	<section>
	  		<%= render 'layouts/tradeboard' %>
	  	</section>
	  </trade>
	</div>


	<div class="row-fluid">
	  <aside class="span3">
	  	<section>
		  	<%= render 'layouts/ranking' %>
		  </section>
	  </aside>
	  <main class="span9">
	  	<section>
		  	<%= render 'layouts/playing' %>
	  	</section>
	  </main>
	</div>


